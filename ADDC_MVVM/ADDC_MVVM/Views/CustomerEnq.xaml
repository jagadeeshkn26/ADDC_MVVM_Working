<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADDC_MVVM.Views.CustomerEnq"
             xmlns:Common="clr-namespace:ADDC_MVVM;assembly=ADDC_MVVM"
             xmlns:vm="clr-namespace:ADDC_MVVM.ViewModels;assembly=ADDC_MVVM">
  
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
 <ContentPage.ToolbarItems>
    <ToolbarItem Text="SubmitEnquiry" Command="{Binding LoginCommand}" />
  </ContentPage.ToolbarItems>
  
  <ContentPage.BindingContext>
    <vm:CustomerEnquiryViewModel/>
  </ContentPage.BindingContext>

</ContentPage>